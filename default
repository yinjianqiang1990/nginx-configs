server {
    listen 80;
    server_name _;  # 匹配所有请求，或替换为你的域名/IP

    # 配置根目录和默认图片
    location / {
        root /usr/share/nginx/html;
        index test.jpg;  # 直接返回图片作为默认响应
    }

    # 确保图片被正确识别MIME类型
    location ~* \.(jpg|jpeg|png|gif)$ {
        expires 30d;  # 客户端缓存30天
        add_header Cache-Control "public";
    }
}
